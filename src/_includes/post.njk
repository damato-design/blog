<!DOCTYPE html>
<html lang="en">
  <head>
    <title>{{ title }}</title>
    {% include "head.njk" %}
  </head>
  <body>
    <main style="--heat: {{ heat }}">
      {% import "feature.njk" as f %}
      {% include "header.njk" %}
      {% if desc %}
      <div class="post-hero">
        {{ f.feature(title, desc, heat, 'h1') }}
      </div>
      {% endif %}
      <article>
        {% if desc %}
        <div class="max-width">
          <div class="prepost" data-density-shift>
            <datetime time="{{ page.date.toISOString() }}">{{ page.date.toLocaleString('en-US', { month: 'long', day: '2-digit', year: 'numeric' }) }}</datetime>
            <span>{{ content | readtime }}</span>
            <web-speech target="markdown" style="flex: 1"></web-speech>
          </div>
          <hr/>
        </div>
        {% endif %}
        <div class="max-width">
          <div id="markdown" data-density-shift>
          {{ content | safe }}
          </div>
          <span class="signature">- Donnie</span>
        </div>
      </article>
      <script>
        const debounce = (callback, wait) => {
          let timeoutId = null;
          return (...args) => {
            window.clearTimeout(timeoutId);
            timeoutId = window.setTimeout(() => callback.apply(null, args), wait);
          };
        }
        const scroll = () => {
          const percent = Math.floor(100 * window.scrollY / (document.body.scrollHeight - window.innerHeight));
          document.body.style.setProperty('--scrollY', percent);
        } 
        window.addEventListener('scroll', debounce(scroll, 10));
        scroll();
      </script>
      {% mermaid_js %}
    </main>
  </body>
</html>