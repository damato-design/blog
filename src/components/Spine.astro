---
import heatColor from '../heat.js';
import logo from '@components/logo.svg?raw';
const { title, heat, time, animal = 'caterpillar' } = Astro.props
---

<style>
  .spine {
    display: grid;
    grid-template-columns: auto 1fr auto;
    border-radius: 3px;
    overflow: hidden;
  }

  .spine:after {
    content: '';
    display: block;
    grid-column: 1 / -1;
    height: 100%;
    grid-row: 1 / -1;
    position: relative;
    pointer-events: none;
    box-shadow: 
      inset 0 1rem 2rem rgba(200, 200, 200, .5), 
      inset 0 -1rem 2rem rgba(50, 50, 50, .5);
  }

  .animal {
    grid-row: 1;
    grid-column: 1;
    width: 16vw;
    max-width: 10rem;
    display: flex;
    align-items: center;
    background: black;
    padding: 1rem;
  }

  .animal img {
    background: white;
    transform: rotate(-90deg);
  }

  .title {
    grid-row: 1;
    grid-column: 2;
    container-type: inline-size;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-family: Garamond Nova;
  }

  .title h2 {
    font-weight: 300;
    font-size: 8cqi;
    text-wrap: balance;
    line-height: 1.1;
    padding: .25em;
    margin: 0;
  }

  .title span {
    text-wrap: nowrap;
    padding: 1em;
    margin-inline-start: auto;
  }

  .publisher {
    grid-row: 1;
    grid-column: 3;
    background: black;
    color: white;
    display: flex;
    align-items: center;
    padding: 1rem;
    text-decoration: none;
    --heat: currentColor;
  }

  @media (max-width: 600px) {
    .hide, .spine:after {
      display: none;
    }
  }

</style>

<div>
  <div class="spine max-width">
    <div class="animal hide">
      <img src={ `/animals/${animal}.webp` }/>
    </div>
    <div class="title" style={ `background: ${ heatColor(heat) }` }>
      <h2>{ title }</h2>
      <span>{ time }</span>
    </div>
    <a class="publisher hide" href="/">
      <Fragment set:html={logo} />
    </a>
  </div>
</div>