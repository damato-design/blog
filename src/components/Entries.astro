---
import Entry from '@components/Entry.astro';
const { entries } = Astro.props;
---

<style>
  ul {
    list-style: none;
    margin: 0;
    padding: 0;
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(var(--card-width), 1fr));
    gap: 2rem;
    filter: drop-shadow(0 .4rem .6rem rgba(0,0,0,.2));
  }

  li {
    display: contents;
  }
</style>

<ul>
  { entries.map((entry) => <li><Entry entry={ entry }/></li>) }
</ul>