---
const { title = 'Design Systems Hot Takes', slug = ''} = Astro.props;
const domain = Astro.url;
const url = slug ? new URL(`/posts/${slug}`, domain) : '/';
---

<style>
  footer {
    border-top: 1px solid;
    display: flex;
    align-items: center;
    justify-content: start;
  }

  @media print {
    footer {
      position: fixed;
      bottom: 0;
    }
  }

  .title {
    font-family: PT Sans Narrow;
    text-align: center;
    text-wrap: balance;
    text-transform: capitalize;
    text-decoration: none;
    line-height: 1;
  }

  hr {
    align-self: stretch;
    margin-inline: 1rem;
  }
</style>

<footer class="max-width">
  <a class="title" href={ url }>{title}</a>
  <hr>
