.post-title {
  padding-block: var(--space--away);
  font-size: min(1em, 10vw);
  font-family: "Oooh Baby";
  font-weight: 700;
  line-height: 1;
  text-shadow: 0 -0.75em 1em, 0 0 0.1em, 0 0 1em var(--base-heat),
    0 0 0.5em var(--base-heat), 0 0 0.1em var(--base-heat),
    0 0.2em 0.02em var(--box-contrast-bg);
  position: relative;
  z-index: 1;
  margin-block: 0;
}

.post-description {
  font-size: 1rem;
  color: var(--light-heat);
  border-left: 2px solid;
  box-shadow: inset 1.25em 0 2em -1.75em var(--base-heat);
  padding: var(--space--near);
  margin: 0;
  margin-block-start: auto;
  position: relative;
  z-index: 1;
}

#pagination {
  display: flex;
  justify-content: space-between;
  gap: var(--space--near);
  padding-block: 0 var(--space--near);
  align-self: stretch;
}

#pagination [aria-disabled] {
  visibility: hidden;
}

@media print {
  .feature {
    background-color: white;
    background-size: 0;
    box-shadow: none;
    color: currentcolor;
  }

    .feature > div:after {
      opacity: 0;
    }

    .feature .post-heat {
      border-color: var(--base-heat);
      box-shadow: none;
    }

    .feature .post-title {
      text-shadow: 0 0.2em 0.02em rgba(0, 0, 0, 0.1);
    }

    .feature .post-description {
      color: currentcolor;
      box-shadow: none;
      border-color: var(--base-heat);
    }
}