.post-title {
  padding-block: var(--space--away);
  font-size: min(1em, 10vw);
  font-family: "Oooh Baby";
  font-weight: 700;
  line-height: 1;
  position: relative;
  z-index: 1;
  margin-block: 0;
  transform: skew(10deg, -2deg);
}

.post-title span {
  background-image: linear-gradient(var(--base-heat), var(--base-heat));
  background-size: 100% .4em;
  background-position: 100% 100%;
  background-repeat: no-repeat;
}

.post-description {
  font-size: .4em;
  border-left: 2px solid var(--base-heat);
  padding: var(--space--near);
  margin: 0;
  margin-block-start: auto;
  position: relative;
  z-index: 1;
}

.prepost {
  display: flex;
  flex-wrap: wrap;
}

.prepost > :not(:last-child):after {
  content: "|";
  margin-inline: var(--space--near);
}

#pagination {
  display: flex;
  justify-content: space-between;
  gap: var(--space--near);
  padding-block: 0 var(--space--near);
  align-self: stretch;
}

#pagination [aria-disabled] {
  visibility: hidden;
}

.signature {
  font-family: "Oooh Baby";
  font-size: min(3em, 10vw);
}

@media print {
  .feature {
    background-color: white;
    background-size: 0;
    box-shadow: none;
    color: currentcolor;
  }

  .feature > div:after {
    opacity: 0;
  }

  .feature .post-heat {
    border-color: var(--base-heat);
    box-shadow: none;
  }

  .feature .post-title {
    text-shadow: 0 0.2em 0.02em rgba(0, 0, 0, 0.1);
  }

  .feature .post-description {
    color: currentcolor;
    box-shadow: none;
    border-color: var(--base-heat);
  }
}
