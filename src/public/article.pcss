article .aside-content > :first-child {
  margin-block-start: 0;
}

article .aside-content > :last-child {
  margin-block-end: 0;
}

article aside blockquote {
  font-weight: 700;
}

.fig-quote {
  margin: 0;
  padding: var(--space--away);
}

.fig-quote * {
  margin: 0;
  font-weight: bolder;
}

.fig-quote blockquote {
  position: relative;
}

.fig-quote blockquote:before {
  content: '‚ùù';
  font-size: 4em;
  line-height: 1;
  position: absolute;
  z-index: -1;
  color: hsl(var(--base-hue) 50% 80%);
  top: 0;
  left: 0;
  transform: translate(-40%, -40%);
}

.fig-quote figcaption {
  margin-top: var(--space--near);
  text-align: right;
}

.mermaid .node :where(rect, polygon, circle, path, ellipse) {
  fill: var(--light-heat) !important;
  stroke: var(--base-heat) !important;
}